<!-- Launch File for C920 -->

<launch>
  <arg name="cam_name" default="camera" />
  <arg name="cam_serial" default="" />

  <group ns="$(arg cam_name)">
    <node pkg="libuvc_camera" type="camera_node" name="$(arg cam_name)">
      <!-- Parameters used to find the camera -->
      <param name="vendor" value="0x046d"/>
      <param name="product" value="0x082d"/>
      <param name="serial" value="$(arg cam_serial)"/>
      <!-- If the above parameters aren't unique, choose the first match: -->
      <param name="index" value="0"/>

      <!-- Image size and type -->
      <param name="width" value="640"/>
      <param name="height" value="480"/>
      <!-- choose whichever uncompressed format the camera supports: -->
      <param name="cam1" value="uncompressed"/>  <!-- or yuyv/nv12/jpeg -->
      <param name="frame_rate" value="30"/>

      <param name="timestamp_method" value="start"/> <!-- start of frame -->
      <!-- <param name="camera_info_url" value="file:///tmp/cam.yaml"/> -->

       <!-- use aperture_priority auto exposure -->
      <param name="auto_exposure" value="3"/>
      <param name="auto_white_balance" value="true"/>
    </node>
  </group>
  
</launch>

